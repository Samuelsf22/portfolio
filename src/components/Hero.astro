---
import { Button } from "@/components/ui/button";
import { Github, Linkedin } from "lucide-react";
import { Card, CardContent } from "./ui/card";
import { Image } from "astro:assets";
import myHero from "@/assets/hero.png";
---

<div class="py-52">
  <Card className="max-w-4xl mx-auto border-none bg-transparent shadow-none">
    <CardContent>
      <div
        class="max-w-4xl w-full flex flex-col md:flex-row items-center justify-center gap-8 lg:gap-16"
      >
        <div class="size-60 md:size-96 rounded-full overflow-hidden">
          <Image src={myHero} alt="Hero photo" class="object-cover"/>
        </div>

        <div class="flex flex-col items-center gap-4">
          <div class="text-center space-y-2">
            <p class="text-xl mb-1">Hello, I'm</p>
            <h1 class="text-4xl md:text-5xl font-bold">Sammy Soriano</h1>
            <p class="text-2xl">Full Stack Developer</p>
          </div>

          <div class="flex gap-4 mt-2">
            <Button variant="outline" className="rounded-full">
              Download CV
            </Button>
            <Button className="rounded-full">Contact Info</Button>
          </div>

          <div class="flex gap-4 mt-2">
            <a
              href="https://www.linkedin.com/in/sammy-soriano-867991314"
              target="_blank"
            >
              <Linkedin className="size-6 hover:scale-125 transition hover:text-primary" />
              <span class="sr-only">LinkedIn Profile</span>
            </a>
            <a href="https://github.com/Samuelsf22" target="_blank">
              <Github className="size-6 hover:scale-125 transition hover:text-primary" />
              <span class="sr-only">GitHub Profile</span>
            </a>
          </div>
        </div>
      </div>
    </CardContent>
  </Card>
</div>
